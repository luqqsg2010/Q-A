<view class="page">
  <view class="page__hd">
    <text class="page__title">问题反馈单</text>
  </view>
  <form  catchsubmit="formSubmit" catchreset="formReset">
    <view class="section">
      <view class="section__title">部门名称<input name="department"  placeholder-class='placeholder' placeholder="  必须填写" value='{{department}}'/></view>
      <view class="section__title">联系人<input name="contact"  placeholder-class='placeholder' placeholder=" 必须填写" value='{{contact}}'/></view>
      <view class="section__title">联系电话<input name="phone"  placeholder-class='placeholder'  placeholder=" 必须填写" value='{{phone}}'/></view>
      
       <view class="section__title">选择系统 
       <picker range="{{xt_list}}" range-key="label" value="{{index}}" bindchange="bindPickerChange">
           <input name="xt" placeholder=" 点击选择" disabled='true' placeholder-class='placeholder'  value="{{xt_list[index].label}}" />
        </picker>
        </view>
       <view class="section__title">问题描述
       <textarea name="desc" maxlength='120' value='{{desc}}'  placeholder-class='placeholder' placeholder=" 最大长度120"></textarea>
       </view>
      <view class="section__title">图片上传</view>
      <view class='uploadView' ><image style='width:200rpx; height: 200rpx' src='{{imgpath}}' catchtap='bindChooiceImage' mode="aspecFill" ></image></view>
    </view>
    <view class="section section_gap">
<canvas  canvas-id='myCanvas'  hidden='true' ></canvas>
    </view>
    <view class="btn-area">
      <button formType="submit">提交</button>
      <button formType="reset">清除</button>
    </view>
  </form>
</view>
