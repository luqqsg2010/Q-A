/* pages/view/view.wxss */
page{ 
  display: flex;  
  flex-direction: column;  
  height: 100%;  
} 
   
/*搜索*/ 
.search{ 
  flex: auto;  
  display: flex;  
  flex-direction: column;  
  background: #fff;  
} 
.search-bar{ 
  flex: none;  
  display: flex;  
  align-items: center;  
  justify-content: space-between;  
  padding: 20rpx;  
  background: #f4f4f4;  
} 
.search-wrap{ 
  position: relative;  
  flex: auto;  
  display: flex;  
  align-items: center;  
  height: 80rpx;  
  padding: 0 20rpx;  
  background: #fff;  
  border-radius: 6rpx;  
} 
.search-wrap .icon-search{ 
  margin-right: 10rpx;  
} 
.search-wrap .search-input{ 
  flex: auto;  
  font-size: 28rpx;  
} 
.search-call{ 
  padding: 0rpx 25rpx;  
  display: inline-block;
} 
.search-call text{ 
font-size: 32rpx;
color: #AAAAAA;
border-bottom: 1px solid #CCCCCC;
} 
/*搜索结果*/ 
.search-result{ 
  flex: auto;  
  position: relative;  
} 
.search-result scroll-view{ 
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  top: 0;  
} 
.result-item{ 
  position: relative; 
  width:100%;
  height:90rpx;
  display: flex;  
  flex-direction: column;  
  padding: 0 0 40rpx 0rpx;  
  overflow: hidden;  
  border-bottom: 2rpx solid #e5e5e5;  
} 
   
.result-item .media{ 
  position: absolute;  
  left: 16rpx;  
  top: 16rpx;  
  width: 80rpx;  
  height: 80rpx;  
  border-radius: 999rpx;  
} 
.result-item .title, 
.result-item .subtitle{ 
  overflow: hidden;
  display: flex;    
  text-overflow: ellipsis;  
  white-space: nowrap;  
  line-height: 36rpx;  
}
.item-status{
color: #fff;
}
.result-item .title{ 
  margin-bottom: 4rpx;  
  color: #000;  
} 
.sign{ 
  color:#D9718B; 
} 
.result-item .subtitle{
  margin-top:20rpx; 
  color: #808080;  
  font-size: 24rpx;  
} 
.result-item:first-child .subtitle text{ 
  margin-right: 20rpx;  
} 
.result-item:not(:first-child) .subtitle text:not(:first-child):before{ 
  content: '/';  
  margin: 0 8rpx;  
} 
.loading{ 
  padding: 10rpx;  
  text-align: center;
  font-size: 32rpx;
  color: #AAAAAA;
} 
.loading image{
   width: 40rpx;  
  height: 32rpx; 
}
.loading:before{ 
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx; 
  background-size: contain;  
  animation: rotate 1s linear infinite;  
} 
.loading.complete:before{ 
  display: none;  
} 
.posit {  
    width: 300rpx;  
    height: 100%;  
    position: absolute;  
    z-index:0;
    right: 0rpx;  
    display: flex;  
    color:#fff;  
    font-size: 35rpx; 
}  
.posit .del,.posit .fix{
  height: 100%;
  width: 150rpx;
  display: flex; 
  justify-content: center;  
  align-items: center; 
}
.fix_bg{
  background-color:gainsboro;
}
.del_bg{
 background-color:red;
}
.item-data{
   background-color:white; 
   position: absolute;  
   width: 100%; 
    height: 100%;
    z-index:1; 
}
.item-data .top,item-data .bottom{
  height: 8px;
}
